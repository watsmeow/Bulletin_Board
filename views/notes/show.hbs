<div class="row">
    <h3>{{note.title}}
        <small>{{{editIcon note.user user note._id false}}}</small>
    </h3>
    <div class="col s12 m8">
        <div class="card note">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{note.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{note.user.displayName}}</span>
                <img src="{{note.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action center-align">
                <a href="/notes/user/{{note.user._id}}">See more of {{note.user.firstName}}'s public notes.</a>
            </div>
        </div>
    </div>
</div>